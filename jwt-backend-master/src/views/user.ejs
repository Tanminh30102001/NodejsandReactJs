<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>List user</title>
  <!-- Latest compiled and minified CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Latest compiled JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
  <div class="container">
    <div class="mt-5 row">
      <div class="user-info-container">
        <form method="post" action="/users/create-user">
          <div class="mb-3">
            <h3>Create new user</h3>
          </div>
          <div class="mb-3 col-6">
            <label for="email" class="form-label">Email address</label>
            <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp">
          </div>
          <div class="col-6"></div>
          <div class="mb-3 col-6">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="password">
          </div>
          <div class="col-6"></div>
          <div class="mb-3 col-6">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" class="form-control" id="username">
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
      </div>
    </div>
    </form>
    <div class="mt-5 table-user">
      <div class="">
      </div>
      <h3>Table user</h3>
      <table class="table table-hover table-bordered">
        <thead class="table-primary">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">Username</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% userList.forEach(function(user,index){ %>
            <tr>
              <td>
                <%= index + 1 %>
              </td>
              <td>
                <%= user.email %>
              </td>
              <td>
                <%= user.username %>
              </td>
              <td class="gap-2 d-flex d-flex-col justify-content-center align-items-center">
                <a href="/user/update-user/<%= user.id %>" class="d-block">
                  <button type="submit" class="btn btn-warning">Edit</button>
                </a>
                <form method="post" action="/user/delete-user/<%= user.id %>" class="m-0">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>